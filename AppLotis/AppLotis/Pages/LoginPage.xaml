<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppLotis.Pages.LoginPage">
  <StackLayout Orientation="Vertical" Padding="20,20,20,0">
    <Label Text="LOGO" FontSize="30" Style="{StaticResource LabelPrimary}"/>
    
    <Label Text="E-mail" Style="{StaticResource LabelPrimary}"/>
    <Entry x:Name="EntryEmail" HorizontalTextAlignment="Center"/>

    <Label Text="Senha" Style="{StaticResource LabelPrimary}"/>
    <Entry x:Name="EntrySenha" HorizontalTextAlignment="Center" IsPassword="True"/>
    
    <Button Text="Entrar" Style="{StaticResource BtnPrimary}" Clicked="OnEntrarClicked"/>
  </StackLayout>
</ContentPage>