<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppLotis.Pages.Lavagens_Logado.PagamentoLogadoPage">
  <StackLayout Padding="20,20,20,0">
    <Label Text="Pagamento" FontSize="30" Style="{StaticResource LabelPrimary}"/>
    <Label x:Name="LabelValor" Text="Preço total: R$50,00" FontSize="30" Style="{StaticResource LabelPrimary}" />

    <Label Text="Precisa de troco? Pra quanto?" FontSize="20" Style="{StaticResource LabelPrimary}" />
    <Entry x:Name="EntryTroco" HorizontalTextAlignment="Center" Placeholder="70" Keyboard="Numeric"/>

    <Label Text="Onde iremos receber o dinheiro?" FontSize="20" Style="{StaticResource LabelPrimary}" />
    <Entry x:Name="EntryLocalDePagamento" HorizontalTextAlignment="Center" Placeholder="Na loja do lado do estacionamento" Keyboard="Text"/>

  
    <Label Text="Assim que você confirmar, sua lavagem será registrada pelo nosso sistema." Style="{StaticResource LabelPrimary}" />
    
    <Button Text="Confirmar" VerticalOptions="EndAndExpand" Style="{StaticResource BtnPrimary}" Clicked="OnBtnConfirmarClicked"/>
  </StackLayout>
</ContentPage>