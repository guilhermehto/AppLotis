<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppLotis.Pages.Lavagens_Logado.ConfirmarLavagemPage">
  
  <StackLayout Padding="20,20,20,0">
    <Label Text="Por favor, confirme as informações da lavagem" Style="{StaticResource LabelPrimary}"/>
    
    <Label x:Name="LabelPlaca" Style="{StaticResource LabelPrimary}" />
    <Label x:Name="LabelPrecoTotal" Style="{StaticResource LabelPrimary}" />
    <Label x:Name="LabelTroco" Style="{StaticResource LabelPrimary}" />
    <Label x:Name="LabelEndereco" Style="{StaticResource LabelPrimary}" />
    
    <StackLayout Orientation="Horizontal" VerticalOptions="EndAndExpand">
      <Button Text="Confirmar" Style="{StaticResource BtnPrimary}" Clicked="OnBtnConfirmarClicked" VerticalOptions="FillAndExpand"/>
      <Button Text="Cancelar" Style="{StaticResource BtnDefault}" Clicked="OnBtnCancelarClicked" VerticalOptions="FillAndExpand"/>
    </StackLayout>
  </StackLayout>
</ContentPage>