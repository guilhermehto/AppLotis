<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppLotis.Pages.CadastrarPage">
  
  <StackLayout Padding="20,20,20,0" Orientation="Vertical">
    <Label Text="Finalize seu cadastro" FontSize="30" Style="{StaticResource LabelPrimary}" />
    
    
    <Label Text="E-mail" FontSize="20" Style="{StaticResource LabelPrimary}" />
    <Entry Placeholder="email@exemplo.com" Keyboard="Email" HorizontalTextAlignment="Center"/>

    <Label Text="Senha" FontSize="20" Style="{StaticResource LabelPrimary}" />
    <Entry Placeholder="••••••" IsPassword="True" HorizontalTextAlignment="Center"/>

    <Label Text="Confimar Senha" FontSize="20" Style="{StaticResource LabelPrimary}" />
    <Entry Placeholder="••••••" IsPassword="True" HorizontalTextAlignment="Center"/>

    <Label Text="*Assim que você confirmar seu cadastro, a lavagem será confirmada." FontSize="20" Style="{StaticResource LabelPrimary}" />

    <Button Text="Finalizar" Style="{StaticResource BtnPrimary}" VerticalOptions="EndAndExpand"/>
    
  </StackLayout>
  
</ContentPage>